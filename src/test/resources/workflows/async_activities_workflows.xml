<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:wf="http://www.workflowlite.org/schema/core"		
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
					    http://www.workflowlite.org/schema/core http://www.workflowlite.org/schema/core/workflow.xsd">

	<wf:workflow id="asyncSimpleWorkflowWithSingleActivity">
		<wf:activities>
			<wf:activity id="reverseStringActivity" class="org.workflowlite.core.activities.AsyncReverseStringActivity">
				<constructor-arg name="value" value="%{source.toUpperCase()}" />
			</wf:activity>
		</wf:activities>
	</wf:workflow>
	
	<wf:workflow id="asyncSimpleWorkflowWithTwoActivities">
		<wf:activities>
			<wf:activity class="org.workflowlite.core.activities.AsyncReverseStringActivity">
				<constructor-arg name="value" value="%{source}" />
			</wf:activity>
			<wf:activity class="org.workflowlite.core.activities.AsyncAlternateCaseActivity">
				<constructor-arg name="value" value="%{output}" />
			</wf:activity>
		</wf:activities>
	</wf:workflow>

	<wf:workflow id="asyncSimpleWorkflowWithBothSyncAndAsyncActivities">
		<wf:activities>
			<wf:activity class="org.workflowlite.core.activities.AsyncAlternateCaseActivity">
				<constructor-arg name="value" value="%{source + 'xyz'}" />
			</wf:activity>
			<wf:activity class="org.workflowlite.core.activities.ReverseStringActivity">
				<constructor-arg name="value" value="%{output}" />
			</wf:activity>
			<wf:activity class="org.workflowlite.core.activities.AsyncAlternateCaseActivity">
				<constructor-arg name="value" value="%{output}" />
			</wf:activity>
			<wf:activity class="org.workflowlite.core.activities.ReverseStringActivity">
				<constructor-arg name="value" value="%{output}" />
			</wf:activity>
		</wf:activities>
	</wf:workflow>

	<wf:workflow id="asyncSimpleWorkflowWithBothSyncAndAsyncActivitiesThrowsExecutionException">
		<wf:activities>
			<wf:activity class="org.workflowlite.core.activities.AsyncAlternateCaseActivity">
				<constructor-arg name="value" value="%{source + 'xyz'}" />
			</wf:activity>
			<wf:activity class="org.workflowlite.core.activities.AsyncReverseStringActivity">
				<constructor-arg name="value" value="%{output}" />
				<property name="throwException" value="true" />
			</wf:activity>
			<wf:activity class="org.workflowlite.core.activities.AsyncAlternateCaseActivity">
				<constructor-arg name="value" value="%{output}" />
			</wf:activity>
			<wf:activity class="org.workflowlite.core.activities.ReverseStringActivity">
				<constructor-arg name="value" value="%{output}" />
			</wf:activity>
		</wf:activities>
	</wf:workflow>

	<wf:workflow id="asyncSimpleWorkflowWithBothSyncAndAsyncActivitiesThrowsCancellationException">
		<wf:activities>
			<wf:activity class="org.workflowlite.core.activities.AsyncAlternateCaseActivity">
				<constructor-arg name="value" value="%{source + 'xyz'}" />
			</wf:activity>
			<wf:activity class="org.workflowlite.core.activities.AsyncReverseStringActivity">
				<constructor-arg name="value" value="%{output}" />
				<property name="cancel" value="true" />
			</wf:activity>
			<wf:activity class="org.workflowlite.core.activities.AsyncAlternateCaseActivity">
				<constructor-arg name="value" value="%{output}" />
			</wf:activity>
			<wf:activity class="org.workflowlite.core.activities.ReverseStringActivity">
				<constructor-arg name="value" value="%{output}" />
			</wf:activity>
		</wf:activities>
	</wf:workflow>
</beans>
