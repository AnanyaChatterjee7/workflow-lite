<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:wf="http://www.workflowlite.org/schema/core"		
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
					    http://www.workflowlite.org/schema/core http://www.workflowlite.org/schema/core/workflow.xsd">

	<wf:workflow id="customWorkflow">
		<wf:activities>
			<wf:activity id="abc_01" class="org.workflowlite.core.ReverseStringActivity">
				<constructor-arg name="name" value="reverseStringActivity_01" />
				<constructor-arg name="value" value="${source.toUpperCase()}" />
			</wf:activity>
			<wf:activity id="abc_02" class="org.workflowlite.core.ReverseStringActivity">
				<constructor-arg name="name" value="reverseStringActivity_02" />
				<constructor-arg name="value" value="${output}" />
			</wf:activity>
			<wf:switch on="${context.workflowId}" id="condition_01"> <!-- TODO: Make id mandatory -->
				<wf:when value="customWorkflow">
					<wf:activities>
						<wf:activity id="abc_03" class="org.workflowlite.core.ReverseStringActivity">
							<constructor-arg name="name" value="reverseStringActivity_03" />
							<constructor-arg name="value" value="${output}" />
						</wf:activity>
						<wf:activity id="abc_04" class="org.workflowlite.core.ReverseStringActivity">
							<constructor-arg name="name" value="reverseStringActivity_03" />
							<constructor-arg name="value" value="${output}" />
						</wf:activity>
					</wf:activities>
				</wf:when>
				<wf:when value="false">
					<wf:activities>
						<wf:activity id="abc_05" class="org.workflowlite.core.ReverseStringActivity">
							<constructor-arg name="name" value="reverseStringActivity_03" />
							<constructor-arg name="value" value="${output}" />
						</wf:activity>
					</wf:activities>
				</wf:when>
				<wf:default>
					<wf:activities>
						<wf:activity id="abc_06" class="org.workflowlite.core.ReverseStringActivity">
							<constructor-arg name="name" value="reverseStringActivity_03" />
							<constructor-arg name="value" value="${output}" />
						</wf:activity>
					</wf:activities>
				</wf:default>
			</wf:switch>
		</wf:activities>
	</wf:workflow>
</beans>
