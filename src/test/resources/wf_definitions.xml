<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<import resource="spring-beans/workflow-lite-core.xml"/>
	
	<bean id="workflowDefinitions" class="org.workflowlite.core.WorkflowXmlsProvider">
		<constructor-arg>
			<list>
				<value>classpath:workflows/conditional_workflows.xml</value>
				<value>classpath:workflows/async_activities_workflows.xml</value>
			</list>
		</constructor-arg>
	</bean>
</beans>
