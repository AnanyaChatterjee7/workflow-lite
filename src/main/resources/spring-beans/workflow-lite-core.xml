<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="workflow-lite-workflow-bean" class="org.workflowlite.core.Workflow" scope="prototype" />
	
	<bean id="beanInstantiator" class="org.workflowlite.core.bean.BeanInstantiator" scope="singleton" />
	<bean id="workflowDefinitionsLoader" class="org.workflowlite.core.bean.WorkflowDefinitionsLoader" scope="singleton" />
	<bean id="workflowManager" class="org.workflowlite.core.WorkflowManager" scope="singleton">
		<constructor-arg name="beanInstantiator" ref="beanInstantiator" />
	</bean>
</beans>
